<div class="container my-5">
  <div class="row mt-3 mx-auto">
  	  <div class ="col-md-4 offset-md-1">
        <%= attachment_image_tag @item, :image, format: 'jpeg', size: "300x200", fallback: "no_image.jpg" %>
      </div>
      <div class="col-md-6">
        <div class="m-3">
          <h2>
            <strong><%= @item.name %></strong>
          </h2>
        </div>
        <div class="m-3">
          <%= @item.introduction %>
        </div>
        <div class="m-3">
          <strong>￥<%= @item.with_tax_price.to_s(:delimited) %></strong> (税込み)
        </div>
        <div class="form-group m-3">
          <%= form_with model: @cart_item, url: cart_items_path, local:true do |f| %>
          <%= f.hidden_field :item_id, value: @item.id %>
          <%= f.select :amount, *[1..10],include_blank: "個数を選択" %>
          <%= f.submit'カートに入れる' ,class: 'btn btn-success ml-3' %>
          <% end %>
        </div>
      </div>
    </div>
</div>