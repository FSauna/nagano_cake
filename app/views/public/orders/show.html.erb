<div class="container my-5">
  <div class="row">
    <h2>注文履歴詳細</h2>
  </div>
  
    <div class="col-7">
      <strong>注文情報</strong>
      <table class="table table-hover table-bordered col-8 table-sm">
        <thead>
          <tr>
            <th>注文日</th>
            <th>配送先</th>
            <th>支払方法</th>
            <th>ステータス</th>
          </tr>
        </thead>
        <tbody>
          <tr>
            <td><%= @order.created_at.strftime("%Y/%m/%d") %></td>
            <td>
              〒<%= @order.postal_code %></br>
              <%= @order.address %></br>
              <%= @order.name %>
            </td>
            <td><%= @order.payment_method %></td>
            <td><%= @order.ordered_status %></td>
          </tr>
        </tbody>
      </table>
    </div>
    
  <div class="row mt-3">
    <div class="col-8">
      <strong>注文内容</strong>
      <table class="table table-hover table-bordered col-8 table-sm">
        <thead>
          <tr>
            <th>商品</th>
            <th>単価（税込）</th>
            <th>個数</th>
            <th>小計</th>
          </tr>
        </thead>
        <tbody>
          <% @sum = 0 %>
          <% @order_details.each do |order_detail| %>
          <tr>
            <td><%= order_detail.item.name %></td>
            <td><%= order_detail.item.with_tax_price.to_s(:delimited) %></td>
            <td><%= order_detail.amount %></td>
            <td><%= order_detail.subtotal.to_s(:delimited) %></td>
          </tr>
          <% @sum += order_detail.subtotal %>
          <% end %>
        </tbody>
      </table>
    </div>
    
    <div class="col-4">
      <strong>請求情報</strong>
      <table class="table table-hover table-bordered col-8 table-sm">
        <thead>
          <tr>
            <th>商品合計</th>
            <th>配送料</th>
            <th><strong>ご請求額</strong></th>
          </tr>
        </thead>
        <tbody>
          <tr>
            <td><%= @sum.to_s(:delimited) %></td>
            <td><%= @order.shipping_fee %></td>
            <td>
              <%= @amount_billed = @sum + @order.shipping_fee %>
              <%= @amount_billed.to_s(:delimited) %>
            </td>
          </tr>
        </tbody>
      </table>
    </div>
  </div>
</div>