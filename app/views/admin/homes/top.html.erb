<div class="container">
  <h2>注文履歴一覧</h2>
	<table class="table">
	  <thead>
      <tr>
        <th>購入日時</th>
        <th>購入者</th>
        <th>注文個数</th>
        <th>注文ステータス</th>
      </tr>
    </thead>
	  <tbody>
	    <% @sum = 0 %>
      <% @orders.each do |order| %>
        <tr>
          <td><%= link_to order.created_at("%Y/%m/%d/ %T"), admin_order_path(order)  %></td>
          <td><%= order.customer.last_name + order.customer.first_name %></td>
          <td><%= order.order_details.sum(:amount) %></td>
          <td><%= order.ordered_status %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
<%= paginate @orders %>