<div class="container">
  <h2>ジャンル一覧・追加</h2>
    <%= form_with model:@genre, url: admin_genres_path, local:true do |f| %>
    <div class="form-group">
      <h4>ジャンル名</h4> <%= f.text_field :name, class: "form-control genre_name" %>
    </div>
    <div class="form-group">
      <%= link_to "新規登録", admin_genres_path(@genre), class: "btn btn-sm btn-success" %>
    </div>
    <% end %>
	<h2>ジャンル</h2>
	<table class="table">
	  <tbody>
      <% @genres.each do |genre| %>
        <tr>
          <td><%= genre.name %></td>
          <td><%= link_to "編集する", edit_admin_genres_path(@genre), class: "btn btn-sm btn-success" %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>