<div class="container">
  <h2>商品編集</h2>
  <%= form_with model: @item, url: admin_item_path, local:true do |f| %>
  <div class="form-group">
    <%= f.label :商品画像 %>
    <%= f.attachment_field :image, class: "form-control-file" %>
  </div>
  <div class="form-group">
    <%= f.label :商品名 %>
    <%= f.text_field :name,placeholder:"商品名", class: "form-control" %>
  </div>
  <div class="form-group">
    <%= f.label :商品説明 %>
    <%= f.text_area :introduction, placeholder:"商品説明", class: "form-control" %>
  </div>
  <div class="form-group">
    <%= f.label :ジャンル %>
    <%= f.collection_select(:genre_id, Genre.all, :id, :name, {prompt: "--選択してください--"}, {class: "form-control-select"}) %>
  </div>
  <div class="form-group">
    <%= f.label :税抜価格 %>
    <%= f.text_field :price, placeholder:"1000", class: "form-control" %>円
  </div>
  <div class="form-group">
    <%= f.label :販売ステータス %>
    <label><%= f.radio_button :is_active, :true %>販売中</label>
    <label><%= f.radio_button :is_active, :false %>販売停止中</label>
  </div>
  <div class="form-group">
      <%= f.submit "変更を保存", class: "btn btn-success" %>
  </div>
  <% end %>
</div>