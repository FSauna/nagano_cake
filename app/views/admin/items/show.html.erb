<div class="container ">
  	<h2>商品詳細</h2>
  	<div class="row mt-3">
  	  <div class ="offset-sm-1 col-sm-3">
        <%= attachment_image_tag @item, :image, :fill, 300, 200, format: 'jpeg', fallback: "no_image.jpg" %>
      </div>
      <table class="table">
    	  <div class="d-flex flex-column bd-highlight mb-3">
      	  <thead>
            <tr>
              <th>商品名</th>
              <th>商品説明</th>
              <th>ジャンル</th>
              <th>税込価格(税抜価格)</th>
              <th>販売ステータス</th>
            </tr>
          </thead>
        </div>
        <div class="d-flex flex-column bd-highlight mb-3">
          <tbody>
            <tr>
              <td><%= @item.name %></td>
              <td><%= @item.introduction %></td>
              <td><%= @item.genre.name %></td>
              <td><%= @item.tax_price.to_s(:delimited) %>(<%= (@item.price).to_s(:delimited) %>)円</td>
              <td>
                <% if @item.is_active == true %>
                  販売中
                <% else %>
                  販売停止中
                <% end %>
              </td>
            </tr>
          </tbody>
        </div>
      </table>
      <div class="row">
        <%= link_to "編集する", edit_admin_item_path(@item.id), class: "btn btn-success" %>
      </div>
    </div>
</div>