<div class="container">
  <h2>管理者ログイン</h2>
  <%= form_with model: @admin, url: admin_session_path, local: true do |f| %>
  <div class="text-center">
    <div class="form-group mb-3">
      <%= f.label :メールアドレス %>
      <div class="col-xs-5">
        <%= f.email_field :email, autofocus: true, autocomplete: "sample@example.com", class: "form-control" %>
      </div>
    </div>
    <div class="form-group mb-3">
      <%= f.label :パスワード %>
      <div class="col-xs-5">
        <%= f.password_field :password, autocomplete: "current-password", class: "form-control" %>
      </div>
    </div>
    <div class="actions">
      <%= f.submit "ログイン", class: "btn btn-sm btn-primary" %>
    </div>
  </div>
  <% end %>
</div>