<div class="row mt-3">
  <div class="offset-2">
    <h2>新規会員登録</h2>
  </div>
</div>
<div class="row mt-3">
  <div class="offset-2">
    <%= form_with model: @customer, url: customer_registration_path, local: true do |f| %>
      <%= render "customers/shared/error_messages", resource: resource %>
      <table class="table table-borderless">
        <tbody>
          <tr>
            <td><%= f.label :名前 %></td>
            <td>
              （姓）　<%= f.text_field :last_name, autofocus: true, placeholder:"令和" %>
              （名）　<%= f.text_field :first_name, placeholder:"道子" %>
            </td>
          </tr>
          <tr>
            <td><%= f.label :フリガナ %></td>
            <td>
              （セイ）<%= f.text_field :last_name_kana, placeholder:"レイワ" %>
              （メイ）<%= f.text_field :first_name_kana, placeholder:"ミチコ" %>
            </td>
          </tr>
          <tr>
            <td><%= f.label :メールアドレス %></td>
            <td>　　　　<%= f.email_field :email, placeholder:"sample@example.com" %></td>
          </tr>
          <tr>
            <td><%= f.label :郵便番号（ハイフンなし） %></td>
            <td>　　　　<%= f.text_field :postal_code, placeholder:"0000000" %></td>
          </tr>

          <tr>
            <td><%= f.label :住所 %></td>
            <td>　　　　<%= f.text_field :address, placeholder:"東京都渋谷区代々木神園町0-0" %></td>
          </tr>

          <tr>
            <td><%= f.label :電話番号（ハイフンなし） %></td>
            <td>　　　　<%= f.text_field :telephone_number, placeholder:"0000000000" %></td>
          </tr>
          <tr>
            <td><%= f.label :パスワード（６文字以上） %></td>
            <td><% if @minimum_password_length %>
                <% end %>
                　　　　<%= f.password_field :password, autocomplete: "new-password" %>
            </td>
          </tr>
          <tr>
            <td><%= f.label :パスワード（確認用） %></td>
            <td>　　　　<%= f.password_field :password_confirmation, autocomplete: "new-password" %></td>
          </tr>
          <tr>
            <td></td>
            <td><%= f.submit "新規登録" ,class: "btn btn-success col-md-5 offset-md-1" %></td>
          </tr>
        </tbody>
      </table>
    <% end %>

<h2>既に登録済みの方</h2>
  <div><%= link_to "こちら", new_customer_session_path %>からログインしてください。</div>
